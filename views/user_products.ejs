<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ReseñaPlus</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="/productos/user_products.css">
</head>

<body>

<!-- Encabezado con el logo y botones -->
<header class="d-flex justify-content-between align-items-center p-3">
    <a href="/products/"><img src="/imagenes/LOGO2.png" alt="Logo" width="350"></a>
    <!-- <div>
      <button id="loginBtn" class="btn btn-outline-primary mr-2">Iniciar Sesión</button>
      <button class="btn btn-primary" onclick="openPopup()">Registrarse</button>
    </div> -->
  </header>

    <!-- Sección de Mis Productos -->
    <div class="container mt-5">
        <div class="product-header">
            <h3 class="text-center display-5">Mis Productos</h3>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a href="/products/crearproducto/"><button class="btn me-md-2 addhover" type="button" >
                <img src="/imagenes/IconParkOutlineAdd.svg" class="img-p" alt="icono">
            </button>
            </a>

        </div>
        <br>
        <div class="row">
            <% products.forEach((product) => { %>
                <!-- Tarjeta de producto -->
                <div class="card mb-4">
                    <div class="row g-1">
                        <div class="col-md-1 d-flex justify-content-center align-items-center">
                            <!-- <button class="btn mx-auto">
                                <img src="/imagenes/option.jpeg" alt="icono" style="width: 20px; height: 20px; margin-right: 5px;">
                            </button> -->
                        </div>
                        <div class="col-md-3">
                            <img src="<%= product.imagenBase64 %>" class="img-fluid rounded m-3" alt="Producto">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= product.nombre_producto %>
                                </h5>
                                <p class="card-text">
                                    <%= product.descrip_producto %>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-2 d-flex flex-column justify-content-center align-items-center">
                            <button class="btn btn-primary mb-2"  onclick="updateProduct('<%= product.id %>')">Editar</button>
                            <button class="btn btn-danger" onclick="deleteProduct('<%= product.id %>')">Borrar</button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        <br>
        <!-- <div class="d-grid gap-2 d-md-flex justify-content-center">
            <button class="btn btn-success rounded-pill px-3" type="button">Agregar Productos</button>
            <button class="btn btn-success rounded-pill px-3" type="button">Editar Productos</button>
        </div>
        <br> -->
    </div>

    <!-- JavaScript de Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        function updateProduct(productId) {
            // Redirect to the update page or open a modal for updating the product
            window.location.href = `/products/editarproducto/${productId}`;
        }
    
        function deleteProduct(productId) {
            if (confirm('¿Estás seguro de que deseas eliminar este producto?')) {
                fetch(`/products/${productId}`, {
                    method: 'DELETE'
                })
                .then(response => {
                    if (response.ok) {
                        // Reload the page or remove the product card from the DOM
                        window.location.reload();
                    } else {
                        alert('Error al eliminar el producto');
                    }
                });
            }
        }
    </script>
</body>

</html>